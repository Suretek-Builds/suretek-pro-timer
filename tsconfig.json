{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext", // Ensures ES module support
        "moduleResolution": "node",
        "outDir": "./dist", // Your compiled files will go here
        "esModuleInterop": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ], // Include all TypeScript files in your src folder
    "exclude": [
        "node_modules"
    ]
}